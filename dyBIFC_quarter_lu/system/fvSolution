FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p)"
    {
        solver          PCG;
        preconditioner
	{
	    preconditioner  GAMG;
            tolerance       1e-04;
            relTol          0;
            smoother        DICGaussSeidel;
            nPreSweeps      0;
            nPostSweeps     2;
            nBottomSweeps   0;
            cacheAgglomeration    false;  
            nCellsInCoarsestLevel 10;
            agglomerator    faceAreaPair;
            mergeLevels     1;
	}
	tolerance       0.0;//1e-06;
        relTol          0.05;
        maxlter         100;
    }

    "(pFinal)"
    {
        solver          PCG;
        preconditioner
	{
	    preconditioner  GAMG;
            tolerance       1e-04;
            relTol          0;
            smoother        DICGaussSeidel;
            nPreSweeps      0;
            nPostSweeps     2;
            nBottomSweeps   0;
            cacheAgglomeration    false;  
            nCellsInCoarsestLevel 10;
            agglomerator    faceAreaPair;
            mergeLevels     1;
	}
	tolerance       1e-04;
        relTol          0;
        maxlter         100;
    }

    "(U|k|epsilon|omega|R|nuTilda)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0;
    }
    "(U|k|epsilon|omega|R|nuTilda)Final"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0;
    }

}


PIMPLE
{
   nOuterCorrectors    10;
    nCorrectors         2;
    nNonOrthogonalCorrectors 1;


    residualControl
    {
        p
        {
          tolerance 1e-4;
            relTol 0;
        } 
        "(U)"
        {
            tolerance 1e-4;
            relTol 0;
        }
     }
}

relaxationFactors
{
    fields
    {
        p               0.3;
    }
    equations
    {
        U               0.7;
        k               0.7;
        epsilon         0.7;
        omega           0.7;
        R               0.7;
        nuTilda         0.7;
    }
}


