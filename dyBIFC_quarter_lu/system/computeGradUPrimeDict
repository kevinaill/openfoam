    computeGradUPrime
    {
        functionObjectLibs ( "libutilityFunctionObjects.so" );
        enabled         true;
        type            coded;
        redirectType    computeGradUPrime;
        //writeControl    writeTime;
        //outputControl   timeStep;
        //outputInterval  5;

        codeOptions
        #{
            -I$(LIB_SRC)/meshTools/lnInclude
        #};

        code
        #{
            const volVectorField& UPrime = mesh().lookupObject<volVectorField>("UPrime");
            const volVectorField& UMean = mesh().lookupObject<volVectorField>("UMean");
	    static autoPtr<volTensorField> tField;
	    
	    if(!tField.valid())
	    {
	        tField.set
      		(
         	    new volTensorField
         	    (
            		IOobject
            		(
               		    "GradUPrime",
               		    mesh().time().timeName(),
               		    UMean.mesh(),
               		    IOobject::NO_READ,
               		    IOobject::NO_WRITE
            		),
	    		fvc::grad(UPrime)
         	    )
      		);
	    }

	    volTensorField &GradUPrime = tField();
	    GradUPrime.checkIn();
	    GradUPrime = fvc::grad(UPrime);
	#};
    }
